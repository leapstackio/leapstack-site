<section class="hero">
    <div class="container hero-inner">
        <div class="hero-content">
            <div class="blueprint-marker top-left"></div>
            
            <p class="font-tech animate-fade-up">System Architecture & Integration</p>
            <h1 class="animate-fade-up delay-100">
                Architecting <br />
                <span class="text-gold">Business Efficiency</span>
            </h1>
            <p class="hero-desc animate-fade-up delay-200">
                We transform complex Netsuite environments into streamlined, high-performance engines for enterprise growth.
            </p>
            
            <div class="hero-actions animate-fade-up delay-300">
                <a href="#contact" class="btn-primary">
                    <span>Inquire Now</span>
                </a>
                <a href="#services" class="btn-secondary">
                    <span>Our Approach</span>
                </a>
            </div>
        </div>

        <div class="hero-visual">
            <!-- Abstract Blueprint Visual -->
            <div class="structure-grid">
                <div class="grid-item"></div>
                <div class="grid-item active"></div>
                <div class="grid-item"></div>
                <div class="grid-item"></div>
                <div class="grid-item active-gold"></div>
                <div class="grid-item"></div>
            </div>
        </div>
    </div>
    
    <div class="scroll-indicator">
        <span class="font-tech">SCROLL</span>
        <div class="line"></div>
    </div>
</section>

<style>
    .hero {
        min-height: 100vh;
        display: flex;
        align-items: center;
        position: relative;
        padding-top: 80px; /* Header offset */
        overflow: hidden;
    }

    .hero-inner {
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--space-lg);
        align-items: center;
    }

    @media (min-width: 992px) {
        .hero-inner {
            grid-template-columns: 1.2fr 0.8fr;
        }
    }

    .hero-content {
        position: relative;
        padding: var(--space-lg) 0;
    }

    .blueprint-marker {
        position: absolute;
        width: 20px;
        height: 20px;
        border-top: 1px solid var(--color-gold);
        border-left: 1px solid var(--color-gold);
        top: 0;
        left: -20px;
        opacity: 0.5;
    }

    .hero-desc {
        font-size: 1.125rem;
        max-width: 500px;
        margin: var(--space-md) 0;
        opacity: 0.8;
    }

    .hero-actions {
        display: flex;
        gap: var(--space-sm);
    }

    .btn-primary {
        background: var(--color-gold);
        color: #000;
        padding: 1rem 2rem;
        font-family: var(--font-tech);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        transition: transform 0.3s ease, background 0.3s ease;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        background: #fff;
    }

    .btn-secondary {
        border: 1px solid var(--color-steel);
        color: #fff;
        padding: 1rem 2rem;
        font-family: var(--font-tech);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        transition: all 0.3s ease;
    }

    .btn-secondary:hover {
        border-color: var(--color-gold);
        color: var(--color-gold);
    }

    /* Abstract Visual */
    .hero-visual {
        height: 400px;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    .structure-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-template-rows: repeat(3, 1fr);
        width: 100%;
        height: 100%;
        gap: 1px;
        background: var(--color-steel);
        transform: perspective(1000px) rotateY(-15deg) rotateX(10deg);
        opacity: 0.8;
    }

    .grid-item {
        background: var(--color-void);
        position: relative;
        transition: background 0.5s ease;
    }

    .grid-item.active {
        background: rgba(255, 255, 255, 0.03);
    }

    .grid-item.active-gold {
        background: var(--color-gold-glow);
        border: 1px solid var(--color-gold);
    }

    .scroll-indicator {
        position: absolute;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        opacity: 0.5;
    }

    .scroll-indicator .line {
        width: 1px;
        height: 40px;
        background: var(--color-gold);
    }
</style>
