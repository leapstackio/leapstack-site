<footer class="footer">
    <div class="container footer-inner">
        <div class="copyright font-tech">
            &copy; {new Date().getFullYear()} LEAPSTACK. ALL RIGHTS RESERVED.
        </div>
        
        <div class="socials">
            <a href="#" class="font-tech">LINKEDIN</a>
            <a href="#" class="font-tech">TWITTER</a>
        </div>
    </div>
</footer>

<style>
    .footer {
        padding: var(--space-md) 0;
        border-top: 1px solid var(--color-steel);
        background: #000;
    }

    .footer-inner {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--space-sm);
    }

    @media (min-width: 768px) {
        .footer-inner {
            flex-direction: row;
            justify-content: space-between;
        }
    }

    .copyright {
        font-size: 0.75rem;
        color: var(--color-steel);
    }

    .socials {
        display: flex;
        gap: var(--space-md);
    }

    .socials a {
        font-size: 0.75rem;
        color: var(--color-silver);
        transition: color 0.3s ease;
    }

    .socials a:hover {
        color: var(--color-gold);
    }
</style>
